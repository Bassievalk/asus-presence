{
  "id": "com.bassievalk.asus-presence",
  "version": "1.0.0",
  "compatibility": ">=12.4.0",
  "sdk": 3,
  "support": "https://github.com/Bassievalk/asus-presence/issues",
  "brandColor": "#0B4AA2",
  "connectivity": ["lan"],
  "platforms": [
    "local"
  ],
  "name": {
    "en": "Asus presence"
  },
  "description": {
    "en": "View residents that are home/away using ASUS routers"
  },
  "category": [
    "localization"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Bas Valk",
    "email": "basvalk03@gmail.com"
  },
  "flow": {
    "triggers": [
      {
        "id": "person_came_home",
        "title": {
          "en": "A monitored person came home"
        },
        "tokens": [
          {
            "name": "person",
            "type": "string",
            "title": {
              "en": "Person"
            }
          },
          {
            "name": "devices",
            "type": "string",
            "title": {
              "en": "Online devices"
            }
          }
        ]
      },
      {
        "id": "person_left_home",
        "title": {
          "en": "A monitored person left home"
        },
        "tokens": [
          {
            "name": "person",
            "type": "string",
            "title": {
              "en": "Person"
            }
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "person_is_home",
        "title": {
          "en": "[[person]] is home"
        },
        "args": [
          {
            "name": "person",
            "type": "autocomplete",
            "title": {
              "en": "Person"
            }
          }
        ]
      }
    ]
  },
  "widgets": [
    {
      "id": "presence-overview",
      "name": {
        "en": "ASUS Presence Overview"
      }
    }
  ]
}